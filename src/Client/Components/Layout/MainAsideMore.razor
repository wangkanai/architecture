<div class="offcanvas offcanvas-start @show" tabindex="-1" aria-labelledby="offcanvasMoreLabel" aria-modal="true" role="dialog" @onmouseout="Toggle">
	<div class="offcanvas-body">
		<nav class="nav">
			<ul class="navbar-nav">
				<li class="nav-item">
					<a class="nav-link" href="./">
						<span class="nav-link-icon d-md-none d-lg-inline-block">
							<i class="ti ti-notes"></i>
						</span>
						<span class="nav-link-title">Documents</span>
					</a>
				</li>
			</ul>
		</nav>
	</div>
</div>

@code {
	[Parameter]
	public EventCallback<bool> ShowHasChanged { get; set; }
	[Parameter]
	public bool Show { get; set; }

	private string? show => Show ? "show" : null;

	private async Task Toggle() => await ShowHasChanged.InvokeAsync(!Show);

}